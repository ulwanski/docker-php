FROM php:7.2.6-fpm-alpine

# docker build --compress -t ulwanski/php:7.2.6-fpm-dev -f php7.2.6-fpm-dev .
MAINTAINER Marek Ulwa≈Ñski <marek@ulwanski.pl>

RUN apk update && apk add --upgrade --no-cache $PHPIZE_DEPS libzip-dev=1.3.0-r1 bzip2-dev=1.0.6-r6
RUN docker-php-ext-configure zip --with-libzip && docker-php-ext-install pdo_mysql bcmath mbstring exif opcache zip bz2 sockets

RUN pecl install redis-4.0.2 apcu-5.1.11 xdebug-2.6.0 && docker-php-ext-enable redis apcu xdebug

COPY conf.d/* $PHP_INI_DIR/conf.d/
COPY ./php.ini-development $PHP_INI_DIR/php.ini
